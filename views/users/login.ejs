<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
<form method="POST" action="/login" novalidate class=" needs-validation">
    <div class="mb-3">
        <label for="username" class="form-level">Username</label>
        <input
         type="text"
         name="username" 
         id="username"
          class="form-control"
          required
          />
          <div class="valid-feedback">Looks good! </div>
    </div>

    <div class="mb-3">
        <label for="password" class="form-level">Password</label>
        <input
         type="password"
         name="password" 
         id="password"
          class="form-control"
          required
          />
    </div>
    <button class="btn btn-success">Login</button>
    </form>
